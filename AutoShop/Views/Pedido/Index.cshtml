@using AutoShop.Models
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Historial de pedidos</h2>

<table class="table table-bordered table-responsive table-striped">
    @{ if (Session["misPedidos"] != null)
        {
            foreach (PedidoCliente pedido in (List<PedidoCliente>)Session["misPedidos"])
            {
                int idOrd = pedido.Orden.id;
                <tr>
                    <td>Fecha: @pedido.Fecha</td>
                    <td>Envío: @pedido.envio</td>
                    <td>Entrega: @pedido.status</td>
                    <td colspan="2"></td>
                </tr>
                foreach (ItemPedido item in (List<ItemPedido>)Session["Pedido"])
                {
                    if (item.idOrd == idOrd)
                    {
                        <tr>
                            <td>@item.Producto.nombre</td>
                            <td><img class="img-responsive" src="~/Content/img/productos/@item.Producto.imagen" /></td>
                            <td>@item.Producto.precio</td>
                            <td>@item.Cantidad</td>
                            <td>@(item.Producto.precio * item.Cantidad)</td>
                        </tr>
                    }
                }
                <tr>
                    <td align="right" colspan="4">Total</td>
                    <td>
                        @pedido.Total
                    </td>
                </tr>

            }
        }

    }
</table>

<br />
<a class="btn btn-primary" href="@Url.Action("Index","Home")"> Ir a Tienda</a>

