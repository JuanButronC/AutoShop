@model AutoShop.Models.Empleado

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Eliminar Empleado</h2>
<hr />

<div class="card text-left card-secondary">
    <div class="card-body">
        <div class="row">
            <div class="col-md-3">
                <img class="img-thumbnail" src="@Url.Action("Imagen",new { id = Model.imagen_fk})" alt="@Model.nombre" height="200px" width="200px" />

            </div>
            <div class="col-md-9">

                <h4>@Html.DisplayFor(model => model.nombre)</h4>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.contrasenia)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.contrasenia)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.correo)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.correo)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.rol_fk)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Roles.nombre)
                    </dd>

                </dl>
            </div>
        </div>
    </div>


    <div class="card-footer align-content-end">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Eliminar" class="btn btn-c" />
                @Html.ActionLink("Regresar al listado", "Index", null, new { @class = "btn btn-c" })
            </div>
        }
    </div>
</div>
