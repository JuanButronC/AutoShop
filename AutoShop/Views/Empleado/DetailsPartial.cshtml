@model AutoShop.Models.Empleado

@{
    ViewBag.Title = "DetailsPartial";
    Layout = "null";
}


<div class="card text-center card-secondary">
    <div class="card-body">
        <h4>@Html.DisplayFor(model => model.nombre)</h4>
        <hr />
        <img class="img-thumbnail" src="@Url.Action("Imagen",new { id = Model.imagen_fk})" alt="@Model.nombre" height="150px" width="150px" />

        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.contrasenia)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.contrasenia)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.correo)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.correo)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.rol_fk)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Roles.nombre)
            </dd>

        </dl>
    </div>
    <div class="card-footer align-content-end">
        @Html.ActionLink("Editar", "Edit", new { id = Model.id }, new { @class = "btn btn-c" })
        @Html.ActionLink("Eliminar", "Delete", new { id = Model.id }, new { @class = "btn btn-c" })
    </div>
</div>



