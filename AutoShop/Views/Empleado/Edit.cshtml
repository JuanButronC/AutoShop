@model AutoShop.Models.Empleado

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Edición de Empleado</h2>
<hr />
<div class="card text-left card-secondary">
    <div class="card-body">

        <div class="row">
            <div class="col-md-3">
                <img class="img-thumbnail" src="@Url.Action("Imagen",new { id = Model.imagen_fk})" alt="@Model.nombre" height="200px" width="200px" id="img-preview" />

            </div>
            <div class="col-md-9">
                @using (Html.BeginForm("Edit", "Empleado", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
                {

                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4>Empleado</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.id)
                        @Html.HiddenFor(model => model.imagen_fk)

                        <div class="form-group">
                            @Html.LabelFor(model => model.nombre, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.contrasenia, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.contrasenia, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.contrasenia, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.correo, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.correo, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.correo, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.rol_fk, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownList("rol_fk", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.rol_fk, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.imagen_fk, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <input class="form-control" data-val="true" data-val-required="La imagen del empleado es requerida" id="imagen" name="imagen" type="file" value="" accept = "image/png, image/jpeg,image/jpeg">

                                @Html.ValidationMessageFor(model => model.imagen_fk, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Guardar Cambios" class="btn btn-c" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>


    </div>
    <div class="card-footer align-content-end">
        @Html.ActionLink("Regresar al listado", "Index", null, new { @class = "btn btn-c" })

    </div>
</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/5.5.2/bootbox.min.js" integrity="sha512-RdSPYh1WA6BF0RhpisYJVYkOyTzK4HwofJ3Q7ivt/jkpW6Vc8AurL1R+4AUcvn9IwEKAPm/fk7qFZW3OuiUDeg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
