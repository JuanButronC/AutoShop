@{
    ViewBag.Title = "pagoPaypal";
    Layout = "~/Views/Shared/_Layout.cshtml";

    int idDir = Convert.ToInt32(Session["idDir"]);

    int idClient = Convert.ToInt32(Session["idClient"]);

}
<div class="panel panel-default" style="margin-top:25px">
    <div class="panel-body">
        <div style="display:flex;justify-content: center; align-items: center;">
            <img src="~/Content/img/recursos/Paypal.png" style="margin:auto" width="200px" height="100px" />
        </div>
        <h2 style="text-align:center">Inicie sesión en su cuenta de Paypal</h2>
        <hr />
        <div class="row">
            <div class="col-md-4 col-md-offset-4">

                <form action="#" style="margin:auto">
                    <div class="form-group">
                        <label for="email">Correo Electrónico</label>
                        <input type="email" class="form-control" id="email" name="email" placeholder="Correo electrónico" />

                    </div>
                    <div class="form-group">
                        <label for="pwd">Contraseña</label>
                        <input type="password" class="form-control" id="pwd" name="pwd" placeholder="Contraseña" />

                    </div>
                    <a class="btn btn-primary" href="@Url.Action("pagandoPaypal","Pago",new { idC=idClient,idD=idDir})">Iniciar Sesión</a>
                </form>
            </div>
        </div>

    </div>
</div>


