@using Microsoft.AspNet.Identity
@{
    string num = @Session["itemTotal"].ToString();
    //string num = "0";
}
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
        string name = Session["name"].ToString();
        <ul class="navbar-nav navbar-right">
            <li>
                <a class="btn" href="@Url.Action("Index","Carro")">
                    <i class="fa fa-shopping-cart" style="font-size:20px; color:lightgoldenrodyellow">
                        <span class="badge" style="color:lightgoldenrodyellow">@num</span>
                    </i>
                </a>
                @*Html.ActionLink("Hola " + name + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })*@
            </li>
            <li  class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" aria-expanded="false" aria-haspopup="true" href="#" data-toggle="dropdown">
                    <span class="fa fa-user" ></span>
                    Hola @name
                    <span class="caret"></span>
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        @Html.ActionLink("Mis pedidos", "Index", "Pedido", null, new { id = "add", @class = "dropdown-item" })
                        @Html.ActionLink("Mis datos", "MisDatos", "Cliente", null, new { id = "add", @class = "dropdown-item" })
                </div>
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()" class="nav-link">Cerrar sesión</a></li>
        </ul>
    }
}
else
{

    <ul class="nav navbar-nav navbar-right">
        <li>
            <a class="btn" href="@Url.Action("Index","Carro")">
                <i class="fa fa-shopping-cart" style="font-size:20px; color:lightgoldenrodyellow">
                    <span class="badge" style="color:lightgoldenrodyellow">@num</span>
                </i>
            </a>
            @*Html.ActionLink("Hola " + name + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })*@
        </li>
        <li>@Html.ActionLink("Registrarse", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "nav-link" })</li>
        <li>@Html.ActionLink("Iniciar sesión", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link" })</li>
    </ul>
}
