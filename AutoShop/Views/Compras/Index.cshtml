
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutCompras.cshtml";
}
@{
    DateTime dia = DateTime.Now;
    var hora = dia.Hour;
    string mensaje = "";
    if (hora < 12)
    {
        mensaje = "Buenos días ";
    }
    if (hora >= 12)
    {
        mensaje = "Buenas tardes ";
    }
    if (hora >= 19)
    {
        mensaje = "Buenas noches ";
    }
    string name = @Session["usr"].ToString();
}

<h2><b> @mensaje  @name </b></h2>
<hr class="bg-danger mb-3" />
<div class="row pl-5 pr-5">
    <div class="col-md-4 text-center">
        <div class="card mt-4" style="background-color: rgb(255, 239, 239); border-color: #e33b5c">
            <div class="card-body">
                <h2 class="mt-2 font-weight-bold">Categorías</h2>
                <div class="mt-3 text-center">
                    <a href="@Url.Action("Index", "Categoria")" class="btn btn-danger"><i class="fa fa-home"></i> Home Categoría</a>

                </div>
                <div class="mb-2 mt-3 text-center">
                    <a href="@Url.Action("Create", "Categoria")" class="btn btn-danger"><i class="fa fa-plus-square"></i> Crear Categoría</a>
                </div>
            </div>
        </div>

        <div class="card mt-5" style="background-color: rgb(255, 239, 239); border-color: #e33b5c">
            <div class="card-body">
                <h2 class="mt-2 font-weight-bold">Productos</h2>
                <div class="mt-3 text-center">
                    <a href="@Url.Action("Index", "producto")" class="btn btn-danger"><i class="fa fa-home"></i> Home Producto</a>

                </div>
                <div class="mb-2 mt-3 text-center">
                    <a href="@Url.Action("Create", "producto")" class="btn btn-danger"><i class="fa fa-plus-square"></i> Crear Producto</a>
                </div>
            </div>
        </div>


    </div>
    <div class="col-md-8">
        <div id="demo" class="carousel slide" data-ride="carousel">

            <ul class="carousel-indicators">
                <li data-target="#demo" data-slide-to="0" class="active"></li>
                <li data-target="#demo" data-slide-to="1"></li>
                <li data-target="#demo" data-slide-to="2"></li>
            </ul>

            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="https://w.wallhaven.cc/full/nm/wallhaven-nmp978.jpg" alt="Imagen 1" width="100%" height="500">
                </div>
                <div class="carousel-item">
                    <img src="https://w.wallhaven.cc/full/o3/wallhaven-o3yrq5.jpg" alt="Chicago" width="100%" height="500">
                </div>
                <div class="carousel-item">
                    <img src="https://w.wallhaven.cc/full/72/wallhaven-729xme.jpg" alt="New York" width="100%" height="500">
                </div>
            </div>

            <a class="carousel-control-prev" href="#demo" data-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </a>
            <a class="carousel-control-next" href="#demo" data-slide="next">
                <span class="carousel-control-next-icon"></span>
            </a>
        </div>
    </div>

</div>
