@model AutoShop.Models.Cliente

@{
    ViewBag.Title = "Datos Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card" style="background-color: #e33b5c;">
    <div class="card-header text-white text-center">
        <h2>@ViewBag.Title</h2>
    </div>
</div>

<div class="row justify-content-center">
    @using (Html.BeginForm(new { @class = "form justify-content-center col-md-6" }))
    {
        @Html.AntiForgeryToken()

        <br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.correo, htmlAttributes: new { @class = "control-label" })
            @Html.TextBoxFor(model => model.correo, new { @Value = ViewBag.correo, @readonly = true, @class = "form-control col-md-12" })
            @Html.ValidationMessageFor(model => model.correo, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.nombre, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control col-md-12" } })
            @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.apPaterno, htmlAttributes: new { @class = "control-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.apPaterno, new { htmlAttributes = new { @class = "form-control col-md-12" } })
                @Html.ValidationMessageFor(model => model.apPaterno, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.apMaterno, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.apMaterno, new { htmlAttributes = new { @class = "form-control col-md-12" } })
            @Html.ValidationMessageFor(model => model.apMaterno, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.fecha_nacimiento, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.fecha_nacimiento, new { htmlAttributes = new { @class = "form-control col-md-12" } })
            @Html.ValidationMessageFor(model => model.fecha_nacimiento, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.sexo, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.sexo, new { htmlAttributes = new { @class = "form-control col-md-12" } })
            @Html.ValidationMessageFor(model => model.sexo, "", new { @class = "text-danger" })
        </div>

        <div class="row justify-content-center">
            <!--<input type="submit" class="btn btn-default" value="Registrarse" />-->
            <button type="submit" class="btn text-white" style="background-color: #e33b5c;">Guardar</button>
        </div>
    }
</div>