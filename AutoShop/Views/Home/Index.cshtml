@using AutoShop.Models;


@{
    ViewBag.Title = "Inicio";
}
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->

    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/Content/img/Home/img1.png" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Content/img/Home/img2.png" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Content/img/Home/img3.png" alt="Third slide">
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<hr />
<h2 align="center" class="bg-danger" style="background-color: #e33b5c; padding:10px; color: white;">Novedades</h2>
<hr />
<div id="novedadesCards">
    <div class="row">
        @foreach (Producto productoItem in (List<Producto>)ViewBag.novedades)
        {
            <div class="col-md-3">
                <div class="card card-default" align="center">
                    <a href="@Url.Action("Producto","Catalogo",new { id = productoItem.id})" style="text-decoration: none;">

                        <div class="card-body" style="padding:5px; color:black;">
                            <img class="img-responsive" src="@Url.Action("getImg",new { id = productoItem.id})" height="150px" width="150px" alt="">
                            <p align="center" style="padding:0px; margin:0px; height:7rem">@productoItem.nombre</p>
                            <h4>$@productoItem.precio</h4>
                        </div>
                    </a>
                    <div style="padding:5px;" width="100%">
                        <a class="btn btn-secondary" href="@Url.Action("Agregar","Carro",new { id = productoItem.id, cantidad=1})" style="color:white; width:100%">Agregar al carrito</a>
                    </div>
                </div>
            </div>
        }
    </div>

</div>
<hr />
<h2 align="center" class="bg-danger" style="background-color: #dc3545; padding-bottom:10px; color: white;">
    Artículos con descuento
</h2>
<hr />
<div id="productosRelacionados">
    <div class="row">
        @foreach (Producto productoItem in (List<Producto>)ViewBag.producto)
        {
            <div class="col-md-3">
                <div class="card card-default" align="center">
                    <a href="@Url.Action("Producto","Catalogo",new { id = productoItem.id})" style="text-decoration: none;">

                        <div class="card-body" style="padding:5px; color:black;">
                            <img class="img-responsive" src="@Url.Action("getImg",new { id = productoItem.id})" height="150px" width="150px" alt="">
                            <p align="center" style="padding:0px; margin:0px; height:7rem">@productoItem.nombre</p>
                            <h4>$@productoItem.precio</h4>
                        </div>
                    </a>
                    <div style="padding:5px;" width="100%">
                        <a href="@Url.Action("Agregar","Carro",new { id = productoItem.id, cantidad=1})" class="btn btn-secondary" style="color:white; width:100%">Agregar al carrito</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<hr />

<h2 align="center" class="bg-danger" style="padding:10px; color: white;">Comentarios de clientes</h2>
<hr />
<div id="myCarouselResenias" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarouselResenias" data-slide-to="0" class="active"></li>
        <li data-target="#myCarouselResenias" data-slide-to="1"></li>
        <li data-target="#myCarouselResenias" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/Content/img/Home/resenia1.png"
                 alt="Los Angeles">
            <div class="centered"
                 style="position: absolute;top: 50%;left: 50%;transform: translate(-50%, -50%);color:white"
                 align="center">
                <p>Agustín Sánchez</p>
                <p>
                    Reseña Favorita<br />
                    Todos los producto están en buen estado y a buen precio.
                </p>
            </div>
        </div>

        @foreach (Comentarios comentarioItem in (List<Comentarios>)ViewBag.Comentarios)
        {
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Content/img/Home/resenia2.png" alt="Chicago">
                <div class="centered"
                     style="position: absolute;top: 50%;left: 50%;transform: translate(-50%, -50%);color:white"
                     align="center">
                    <p>@comentarioItem.Cliente.nombre @comentarioItem.Cliente.apPaterno</p>
                    <p>
                        Reseña @comentarioItem.id<br />
                        @comentarioItem.comentario
                    </p>
                </div>

            </div>
        }
    </div>

    <!-- Left and right controls -->

    <a class="carousel-control-prev" href="#myCarouselResenias" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#myCarouselResenias" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<br />