@using AutoShop.Models
@{
    ViewBag.Title = "Producto";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@{Producto item = (Producto)ViewBag.producto;}
<div class="row" style="margin-top: 20px;">
    <div class="col-md-12">
        <div class="card bg-info">
            <div class="card-body">
                <div class="row" style="margin-top: 20px;">
                    <div class="col-md-6 justify-content-center">
                        <img class="card-img-top" src="@Url.Action("ImagenProdcuto",new { id = item.id})"  height="400px" width="400px" alt="">
                    </div>
                    <div class="col-md-6 text-white">
                        @if (item.descuento == 0)
                        {
                            <h3>@item.nombre </h3>

                        }
                        else
                        {
                            <h3>@item.nombre <span class="badge badge-pill bg-secondary text-ca">-@item.descuento%</span> </h3>
                        }
                        <hr>
                        <dl>
                            <dt>Precio:</dt>
                            <dd>$@item.precio</dd>

                            <dt>Precio con descuento:</dt>
                            @{ decimal desc = (((decimal)item.precio / 100) * (decimal)item.descuento);
                                decimal precioDesc = item.precio - desc;
                            }
                            <dd>$@Math.Round(precioDesc, 2)</dd>

                            <dt>Piezas:</dt>
                            <dd>@item.cantidad</dd>
                            <dt>Descripción:</dt>
                            <dd>@item.descripcion</dd>
                        </dl>
                        @using (Html.BeginForm("Agregar", "Carro", null, FormMethod.Get, new { id = "form-add" }))
                        {
                            <input value="@item.id" name="id" id="id-prod" class="form-control" hidden>

                            <div class="form-group" style="width:20%;">
                                <label class="text-white" for="">Cantidad:</label>
                                <br>
                                <input value="1" class="form-control" type="number" name="cantidad" id="cantidad-prod" min="0" max="@item.cantidad">
                            </div>
                            <div class="form-group">
                                <input class="bg-secondary text-ca btn btn-block" type="submit" value="Agregar al carrito">
                            </div>
                        }
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<div class="row" style="margin-top: 20px;">
    <div class="col-md-12">
        <div class="card bg-info">
            <div class="card-header text-white">
                <h5>Comentarios</h5>
            </div>
            <div class="card-body scroll-y">
                @{ List<Comentarios> listaComentarios = (List<Comentarios>)ViewBag.comentarios;}
                @if (listaComentarios.Count == 0)
                {
                    <div class="card text-center bg-secondary" style="margin-bottom: 10px">
                        <div class="card-body">
                            <h5> <i class="fa fa-comment" aria-hidden="true"></i></h5>
                            <p>¡Deje el primer comentario!</p>


                        </div>
                    </div>
                }
                else
                {
                    foreach (Comentarios comentarios in (List<Comentarios>)ViewBag.comentarios)
                    {
                        <div class="card text-left bg-secondary" style="margin-bottom: 10px">
                            <div class="card-body">
                                <p> <i class="fa fa-user" aria-hidden="true"></i> <strong>@comentarios.Cliente.nombre</strong></p>
                                <p>@comentarios.comentario</p>


                            </div>
                        </div>

                    }


                }


            </div>
            <div class="card-footer">
                @using (Html.BeginForm("Comentar", null, FormMethod.Post, new { id = "form-comment" }))
                {
                    <input value="@item.id" name="id" id="id-prod" class="form-control" hidden>


                    <div class="form-group">
                        <label class="text-white" for="">Comentario</label>
                        <br>
                        <textarea class="form-control" name="comentario" id="comentario" cols="30" rows="3" style="max-width:100%"></textarea>
                    </div>
                    <div class="form-group">
                        <input class="bg-secondary text-ca btn btn-block" type="submit" value="Dejar Comentario" style="max-width:100%">
                    </div>
                }
            </div>
        </div>
    </div>


</div>

@{ List<Producto> recomendados = (List<Producto>)ViewBag.productos;}
@if (recomendados.Count != 0)
{
    <h4 style="margin-top: 20px;" class="text-ca"> Productos Parecidos </h4>
    <div class="row">

        @foreach (Producto prodItem in recomendados)
        {
            <div class="col-sm-4 div-prod" precio="@prodItem.precio" descuento="@prodItem.descuento">


                <div class="card text-center bg-info text-white card-prod" producto-id="@prodItem.id">
                    @if (prodItem.descuento != 0)
                    {
                        <span class="badge badge-pill ">-@prodItem.descuento%</span>
                        <a href="@Url.Action("Producto", "Catalogo", new { id = prodItem.id })">
                            <img class="card-img-top" src="src=" @Url.Action("ImagenProducto", new { id = prodItem }) " " style="cursor:pointer" height="150px" width="150px" alt="">
                        </a>

                    }
                    else
                    {
                        <a href="@Url.Action("Producto", "Catalogo", new { id = prodItem.id })">
                            <img class="card-img-top" src="src=" @Url.Action("ImagenProducto", new { id = prodItem }) " " style="margin-top:20px;cursor:pointer" height="150px" width="150px" alt="">
                        </a>
                    }
                    <div class="card-body">
                        <h5 class="card-title">@Html.ActionLink(@prodItem.nombre, "Producto", "Catalogo", new { id = prodItem.id }, new { @class = "prod-name" })</h5>
                        <p class="card-text">$@prodItem.precio</p>
                    </div>
                </div>

            </div>

        }
    </div>
}


