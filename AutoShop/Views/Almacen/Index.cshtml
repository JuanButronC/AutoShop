@using AutoShop.Models
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAlmacenEnvios.cshtml";
}
@{
    DateTime dia = DateTime.Now;
    var hora = dia.Hour;
    string mensaje = "";
    if (hora < 12)
    {
        mensaje = "Buenos días";
    }
    if (hora >= 12)
    {
        mensaje = "Buenas tardes";
    }
    if (hora >= 19)
    {
        mensaje = "Buenas noches";
    }
    string name = @Session["usr"].ToString();
}
<!-- Font Awesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"
      rel="stylesheet" />
<!-- Google Fonts -->
<link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
      rel="stylesheet" />
<!-- MDB -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.6.0/mdb.min.css"
      rel="stylesheet" />
<!-- MDB -->
<script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.6.0/mdb.min.js"></script>
<br />
<div class="row">
    <div class="col-md-12">
        <br />
        <div align="left"><h1>Home Almacen</h1></div><hr />
        <div style="text-align: justify;">
            <strong>@mensaje, @name, bienvenido.</strong><br />En este módulo, usted como empleado de Almacen podrá manejar,
            registrar y actualizar las paqueterías, así como enviar pedidos y definir las fechas de entrega.
        </div>
    </div>
</div>
<p>@ViewBag.listadoEnvio</p>
<div class="row pl-5 pr-5 pb-5">
    <div class="col-md-4 text-center">
        <div class="card mt-4" style="background-color: crimson; border-color: #e33b5c; color:white">
            <div class="card-body">
                <h2 class="mt-2 font-weight-bold">Paqueterías</h2>
                <div class="mt-3 text-center">
                    <a href="@Url.Action("Home", "Paqueteria")" class="btn btn-danger" style="width:100%"><i class="fa fa-home"></i> Home Paquetería</a>
                </div>
                <div class="mb-2 mt-3 text-center">
                    <a href="@Url.Action("Create", "Paqueteria")" class="btn btn-danger" style="width:100%"><i class="fa fa-plus-square"></i> Crear Paquetería</a>
                </div>
                <div class="mb-2 mt-3 text-center">
                    <a href="@Url.Action("Index", "Paqueteria")" class="btn btn-danger" style="width:100%"><i class="fa fa-repeat"></i> Actualizar Paquetería</a>
                </div>
            </div>
        </div>

        <div class="card mt-5" style="background-color: crimson; border-color: #e33b5c; color:white">
            <div class="card-body">
                <h2 class="mt-2 font-weight-bold">Envíos</h2>
                <div class="mt-3 text-center">
                    <a href="@Url.Action("Home", "Envio")" class="btn btn-danger" style="width:100%"><i class="fa fa-home"></i> Home Envío</a>

                </div>
                <div class="mb-2 mt-3 text-center">
                    <a href="@Url.Action("Index", "Envio")" class="btn btn-danger" style="width:100%"><i class="fa fa-plus-square"></i> Actualizar Fecha de Envío</a>
                </div>
                <div class="mb-2 mt-3 text-center">
                    <a href="@Url.Action("Index1", "Envio")" class="btn btn-danger" style="width:100%"><i class="fa fa-plus-square"></i> Actualizar Fecha de Entrega</a>
                </div>
            </div>
        </div>


    </div>
    <div class="col-md-8">
        <div id="carouselExampleSlidesOnly" class="carousel slide" data-mdb-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/Content/img/recursos/RolAlmacen/wallhaven-5wgw57.jpg"
                         class="d-block w-100"
                         alt="..." height="600px" width="100%" />
                </div>
                <div class="carousel-item">
                    <img src="~/Content/img/recursos/RolAlmacen/wallhaven-761m23.jpg"
                         class="d-block w-100"
                         alt="..." height="600px" width="100%" />
                </div>
                <div class="carousel-item">
                    <img src="~/Content/img/recursos/RolAlmacen/wallhaven-nm927k.jpg"
                         class="d-block w-100"
                         alt="..." height="600px" width="100%" />
                </div>
            </div>
        </div>
    </div>

</div>